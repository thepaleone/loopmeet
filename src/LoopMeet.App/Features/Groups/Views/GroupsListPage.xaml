<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoopMeet.App.Features.Groups.Views.GroupsListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="GroupsPage"
    Title="LoopMeet">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Label Text="Groups" FontSize="18" />
            <Button Text="Create Group" Command="{Binding CreateGroupCommand}" />

            <Label Text="Pending Invitations" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding PendingInvitations}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView IsEnabled="{OnIdiom Phone=True, Tablet=True, Desktop=False, TV=False}">
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Text="Accept"
                                        BackgroundColor="#16A34A"
                                        Command="{Binding BindingContext.AcceptInvitationCommand, Source={x:Reference GroupsPage}}"
                                        CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Text="Decline"
                                        BackgroundColor="#DC2626"
                                        Command="{Binding BindingContext.DeclineInvitationCommand, Source={x:Reference GroupsPage}}"
                                        CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <Grid ColumnDefinitions="*,Auto" Padding="0,4">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding BindingContext.ShowInvitationDetailsCommand, Source={x:Reference GroupsPage}}"
                                        CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                                <Label Text="{Binding GroupName}" VerticalOptions="Center" />
                                <Button
                                    Grid.Column="1"
                                    Text="Accept"
                                    IsVisible="{OnIdiom Phone=False, Tablet=False, Desktop=True, TV=True}"
                                    Command="{Binding BindingContext.AcceptInvitationCommand, Source={x:Reference GroupsPage}}"
                                    CommandParameter="{Binding .}" />
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Owned Groups" FontAttributes="Bold" />
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding OwnedGroups}" Spacing="8">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Name}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding BindingContext.OpenGroupCommand, Source={x:Reference GroupsPage}}"
                                    CommandParameter="{Binding .}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <Label Text="Member Groups" FontAttributes="Bold" />
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding MemberGroups}" Spacing="8">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Name}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding BindingContext.OpenGroupCommand, Source={x:Reference GroupsPage}}"
                                    CommandParameter="{Binding .}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <Label Text="You have no groups yet. Create one or join with an invitation." IsVisible="{Binding ShowEmptyState}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
