<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoopMeet.App.Features.Groups.Views.GroupsListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="GroupsPage"
    Title="LoopMeet">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Label Text="Groups" FontSize="18" VerticalOptions="Center" />
                <Button
                    Grid.Column="1"
                    Text="Log out"
                    Command="{Binding LogoutCommand}" />
            </Grid>
            <Button Text="Create Group" Command="{Binding CreateGroupCommand}" />

            <Label Text="Pending Invitations" FontAttributes="Bold" />
            <VerticalStackLayout Spacing="8" IsVisible="{Binding IsLoadingInvitations}">
                <Grid ColumnDefinitions="*" RowDefinitions="Auto,Auto" ColumnSpacing="0" RowSpacing="8">
                    <Grid x:Name="InvitationsSkeletonRow1" HeightRequest="18">
                        <Border BackgroundColor="#E2E8F0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                        </Border>
                        <Border x:Name="InvitationsShimmer1" BackgroundColor="#F8FAFC" Opacity="0.7" WidthRequest="80" HorizontalOptions="Start" />
                    </Grid>
                    <Grid x:Name="InvitationsSkeletonRow2" HeightRequest="18" Grid.Row="1">
                        <Border BackgroundColor="#E2E8F0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                        </Border>
                        <Border x:Name="InvitationsShimmer2" BackgroundColor="#F8FAFC" Opacity="0.7" WidthRequest="80" HorizontalOptions="Start" />
                    </Grid>
                </Grid>
            </VerticalStackLayout>
            <CollectionView ItemsSource="{Binding PendingInvitations}">
                <CollectionView.Triggers>
                    <DataTrigger TargetType="CollectionView" Binding="{Binding IsLoadingInvitations}" Value="True">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </CollectionView.Triggers>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView IsEnabled="{OnIdiom Phone=True, Tablet=True, Desktop=False, TV=False}">
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Text="Accept"
                                        BackgroundColor="#16A34A"
                                        Command="{Binding BindingContext.AcceptInvitationCommand, Source={x:Reference GroupsPage}}"
                                        CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem
                                        Text="Decline"
                                        BackgroundColor="#DC2626"
                                        Command="{Binding BindingContext.DeclineInvitationCommand, Source={x:Reference GroupsPage}}"
                                        CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <Grid ColumnDefinitions="*,Auto" Padding="0,4">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding BindingContext.ShowInvitationDetailsCommand, Source={x:Reference GroupsPage}}"
                                        CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                                <Label Text="{Binding GroupName}" VerticalOptions="Center" />
                                <Button
                                    Grid.Column="1"
                                    Text="Accept"
                                    IsVisible="{OnIdiom Phone=False, Tablet=False, Desktop=True, TV=True}"
                                    Command="{Binding BindingContext.AcceptInvitationCommand, Source={x:Reference GroupsPage}}"
                                    CommandParameter="{Binding .}" />
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Owned Groups" FontAttributes="Bold" />
            <VerticalStackLayout Spacing="8" IsVisible="{Binding IsLoadingOwnedGroups}">
                <Grid ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="0" RowSpacing="8">
                    <Grid x:Name="OwnedSkeletonRow1" HeightRequest="18">
                        <Border BackgroundColor="#E2E8F0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                        </Border>
                        <Border x:Name="OwnedShimmer1" BackgroundColor="#F8FAFC" Opacity="0.7" WidthRequest="80" HorizontalOptions="Start" />
                    </Grid>
                    <Grid x:Name="OwnedSkeletonRow2" HeightRequest="18" Grid.Row="1">
                        <Border BackgroundColor="#E2E8F0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                        </Border>
                        <Border x:Name="OwnedShimmer2" BackgroundColor="#F8FAFC" Opacity="0.7" WidthRequest="80" HorizontalOptions="Start" />
                    </Grid>
                    <Grid x:Name="OwnedSkeletonRow3" HeightRequest="18" Grid.Row="2">
                        <Border BackgroundColor="#E2E8F0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                        </Border>
                        <Border x:Name="OwnedShimmer3" BackgroundColor="#F8FAFC" Opacity="0.7" WidthRequest="80" HorizontalOptions="Start" />
                    </Grid>
                </Grid>
            </VerticalStackLayout>
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding OwnedGroups}" Spacing="8">
                <VerticalStackLayout.Triggers>
                    <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding IsLoadingOwnedGroups}" Value="True">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </VerticalStackLayout.Triggers>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Name}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding BindingContext.OpenGroupCommand, Source={x:Reference GroupsPage}}"
                                    CommandParameter="{Binding .}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <Label Text="Member Groups" FontAttributes="Bold" />
            <VerticalStackLayout Spacing="8" IsVisible="{Binding IsLoadingMemberGroups}">
                <Grid ColumnDefinitions="*" RowDefinitions="Auto,Auto" ColumnSpacing="0" RowSpacing="8">
                    <Grid x:Name="MemberSkeletonRow1" HeightRequest="18">
                        <Border BackgroundColor="#E2E8F0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                        </Border>
                        <Border x:Name="MemberShimmer1" BackgroundColor="#F8FAFC" Opacity="0.7" WidthRequest="80" HorizontalOptions="Start" />
                    </Grid>
                    <Grid x:Name="MemberSkeletonRow2" HeightRequest="18" Grid.Row="1">
                        <Border BackgroundColor="#E2E8F0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                        </Border>
                        <Border x:Name="MemberShimmer2" BackgroundColor="#F8FAFC" Opacity="0.7" WidthRequest="80" HorizontalOptions="Start" />
                    </Grid>
                </Grid>
            </VerticalStackLayout>
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding MemberGroups}" Spacing="8">
                <VerticalStackLayout.Triggers>
                    <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding IsLoadingMemberGroups}" Value="True">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </VerticalStackLayout.Triggers>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Name}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding BindingContext.OpenGroupCommand, Source={x:Reference GroupsPage}}"
                                    CommandParameter="{Binding .}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <Label Text="You have no groups yet. Create one or join with an invitation." IsVisible="{Binding ShowEmptyState}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
