<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoopMeet.App.Features.Groups.Views.CreateGroupPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Create Group">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Create Group" FontSize="24" />
        <Entry Placeholder="Group name" Text="{Binding Name}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />
        <Button Text="Create Group" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</ContentPage>
