<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoopMeet.App.Features.Profile.Views.ChangePasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Change Password">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Change Password" FontSize="20" FontAttributes="Bold" />

        <Entry
            Text="{Binding Email}"
            Placeholder="Account email"
            Keyboard="Email"
            IsVisible="{Binding RequiresEmailForPasswordSetup}" />
        <Entry
            Text="{Binding CurrentPassword}"
            IsPassword="True"
            Placeholder="Current password"
            IsVisible="{Binding RequiresCurrentPassword}" />
        <Entry Text="{Binding NewPassword}" IsPassword="True" Placeholder="New password" />
        <Entry Text="{Binding ConfirmPassword}" IsPassword="True" Placeholder="Confirm new password" />

        <Label Text="{Binding ErrorMessage}" IsVisible="{Binding ShowError}" TextColor="Red" />

        <HorizontalStackLayout Spacing="8">
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
            <Button Text="Update" Command="{Binding SaveCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
