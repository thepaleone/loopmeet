<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoopMeet.App.Features.Auth.Views.CreateAccountPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Create Account">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Create Account" FontSize="24" />
        <Entry Placeholder="Name" Text="{Binding DisplayName}" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Phone (Optional)" Text="{Binding Phone}" Keyboard="Telephone" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True">
            <Entry.Triggers>
                <DataTrigger TargetType="Entry" Binding="{Binding IsOAuthFlow}" Value="True">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Entry.Triggers>
        </Entry>
        <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True">
            <Entry.Triggers>
                <DataTrigger TargetType="Entry" Binding="{Binding IsOAuthFlow}" Value="True">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Entry.Triggers>
        </Entry>
        <Label
            Text="{Binding ErrorMessage}"
            TextColor="DarkRed"
            IsVisible="{Binding ShowError}" />
        <Button Text="Continue" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</ContentPage>
