<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoopMeet.App.Features.Auth.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Login" FontSize="24" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Label
            Text="{Binding ErrorMessage}"
            TextColor="DarkRed"
            IsVisible="{Binding ShowError}" />
        <ActivityIndicator
            IsVisible="{Binding IsBusy}"
            IsRunning="{Binding IsBusy}" />
        <Button Text="Sign In" Command="{Binding SignInCommand}">
            <Button.Triggers>
                <DataTrigger TargetType="Button" Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Button.Triggers>
        </Button>
        <Button Text="Create Account" Command="{Binding NavigateToCreateAccountCommand}">
            <Button.Triggers>
                <DataTrigger TargetType="Button" Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Button.Triggers>
        </Button>
    </VerticalStackLayout>
</ContentPage>
