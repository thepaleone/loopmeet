<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoopMeet.App.Features.Invitations.Views.InviteMemberPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Invite Member">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Invite Member" FontSize="24" />
        <Entry Placeholder="Email address" Text="{Binding Email}" Keyboard="Email" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />
        <Button Text="Send Invite" Command="{Binding SendCommand}" />
    </VerticalStackLayout>
</ContentPage>
