<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoopMeet.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:LoopMeet.App.Features.Auth.Views"
    xmlns:groups="clr-namespace:LoopMeet.App.Features.Groups.Views"
    Title="LoopMeet"
    FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate auth:LoginPage}"
        Route="login" />

    <ShellContent
        Title="Groups"
        ContentTemplate="{DataTemplate groups:GroupsListPage}"
        Route="groups" />

</Shell>
